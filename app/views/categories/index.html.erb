<% content_for :title, 'MoneyMate | Categories' %>
  <%= javascript_import_module_tag "menu" %>

<div class="grand-total">
        <p class="amount-label">Total Amount</p>
        <p class="amount"><%= "$#{@total}" %></p>
</div>
    <div class="container-fuild mx-2">
    <% if @categories.present? %>
    
    <% @categories.each do |category| %>   
       
          <%= link_to  category_expenses_path(category), class: "card-link" do %>
            <div class="card"> 
              <div class="icon-container">
                <%= image_tag(category.icon, class: "icon") %>
              </div>
          
              <div class="text-container">
                <div class="flex-row px-3">
                  <h4 class="text-lg">
                    <%= category.name %>
                  </h4>
                  <div class="amount">
                    <%= "$#{category.total_amount}" %>
                  </div>
                </div>
                <p class="text-xs px-2"><%= category.created_at.strftime("%d %b %Y") %></p>
              </div>
              
            </div>
          <% end %>
          <% end %>
    <% else %>
        <div class="actions">
            You don't have any category yet! Create one.
        </div>
    <% end %>

    <div class = "btn-wrapper">
      <%= link_to new_category_path, class: 'btn-add' do %>
        <span class = "btn-spacer"> Add category </span>
        <%= image_tag('https://img.icons8.com/color-glass/30/null/plus-2-math.png', class:"back-arrow") %>
        <% end %>
    </div>
</div>